@{
    ViewData["Title"] = "Home Page";
}
@model IndexHomeViewModel
<div class="topsite">
    <div class="container">
        <div class="row">
            <div class="col-md-3 col-sm-6">
                <div class="counter">
                    <span class="counter-value">@Model.Categories.Count()</span>
                    <h3>Categories</h3>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="counter purple">
                    <span class="counter-value">@Model.Brands.Count()</span>
                    <h3>Brands</h3>
                </div>
            </div>
             <div class="col-md-3 col-sm-6">
                <div class="counter">
                    <span class="counter-value">@Model.SellingProducts.Count()</span>
                    <h3>Product</h3>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="counter purple">
                    <span class="counter-value">0</span>
                    <h3>Nothing</h3>
                </div>
            </div>
        </div>
    </div>
</div>
