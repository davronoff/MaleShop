<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MaleShop.AdminDashboard</title>

    <link rel="stylesheet"href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/style-packets.css" />
    <link rel="stylesheet" href="~/css/style-company.css" />
    <link rel="stylesheet" href="~/css/info-style.css" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
</head>
<body>
    <div class="sidebar">
        <div class="sidebar-brand">
            <h1><span class="las la-stream"></span><span>RTM</span></h1>
        </div>

        <div class="sidebar-menu">
            <ul>
                <li>
                    <a asp-controller="home" asp-action="index"><span class="las la-home"></span>
                        <span>Menu</span></a>
                </li>
                <li>
                    <a asp-controller="category" asp-action="index"><span class="las la-align-justify"></span>
                        <span>Categories</span></a>
                </li>
                <li>
                    <a asp-controller="brand" asp-action="index"><span class="las la-certificate"></span>
                        <span>Brands</span></a>
                </li>
                <li>
                    <a asp-controller="sellingproduct" asp-action="index"><span class="las la-globe"></span>
                        <span>Selling Products</span></a>
                </li>
                @*<li class="nav-item">
                    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button id="logout" type="submit" class="nav-link btn btn-link text-danger">Logout</button>
                    </form>
                </li>*@
            </ul>
        </div>
    </div>

    <div class="main-content">
        <header>
                <div class="user-wrapper">
                    <img src="~/images/user.png" width="40px" height="40px" alt="" />
                    <div>
                        <h4></h4>
                        <small>Super admin</small>
                    </div>
                </div>
         </header>
    </div>
        <!--Main start-->
        <main role="main" class="main-content">
            @RenderBody()
        </main>
        <!--Main end-->

    <footer>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- JavaScript Bundle with Popper -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
